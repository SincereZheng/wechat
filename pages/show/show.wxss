/* pages/show/show.wxss */
page{
  background-color: #1e3b49;
  margin: 0;
  padding: 0;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 30rpx;
} 

.userinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-top: 60rpx;
}

.userinfo-font{
  font-family: "微软雅黑";
  color: #e3e3e3;
  font-size: 25rpx;
  margin: 30rpx 0 80rpx 0;
}

.userinfo-play{
  height: 150rpx;
  width: 90%;
  text-align: center;
  background-color: white;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 700;
  padding: 20rpx;
  border-radius:20rpx 
}

.mini{
  width: 88%;
  height: 100%;
  align-items: center;
  border-top: 3rpx solid #f9f9f9; 
  margin-top:20rpx;
  padding: 20rpx 
}

.mini-font{
  font-family: "微软雅黑";
  color: black;
  font-size: 25rpx;
  align-items: center;
  padding:  40rpx 0 0 40rpx;
}

.btn{
  background-color: #0066cc;
  color: white;
  width: 46%;
  height: 100%;
  margin-top: 8%;
}