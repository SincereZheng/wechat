/* pages/grade/grade.wxss */
page{
  background-color: #1e3b49;
  margin: 0;
  padding: 0;
}
.grade{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.grade-header {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  align-items: center;
} 

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  color: #e3e3e3;
}


.userinfo-play{
  height: 150rpx;
  width: 90%;
  text-align: center;
  background-color: white;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 700;
  padding: 20rpx;
  color: green;
  border-radius:20rpx; 
}

.mini{
  width: 88%;
  height: 100%;
  align-items: center;
  border-top: 3rpx solid #f9f9f9; 
  margin-top:20rpx;
  padding: 20rpx ;
}

.mini-font{
  font-family: "微软雅黑";
  color: black;
  font-size: 30rpx;
  align-items: center;
  padding:  40rpx 0 0 40rpx;
}

.mini-font1{
  font-family: "微软雅黑";
  color: red;
  font-size: 30rpx;
  align-items: center;
  padding:  40rpx 0 0 40rpx;
}


.game-btn{
  display: flex;
  flex-direction: row;
}


.mini-btn{
  color: white;
  width: 30%;
  margin-top: 4%;
  background-color: #0066cc
}